<div class='top-route' id='products'>

  <a-scene>
    <a-assets>
      <img id="herman-miller" src="./images/products/eames-story.jpg">
      <img id="pick-pete" src="./images/products/pick-pete.jpg">
      <img id="face-design" src="./images/products/face-site.jpg">
      <img id="working-pair" src="./images/products/the-working-pair.jpg">
      <img id="main-frame" src="./images/products/mainframe.jpg">
      <img id="calendar-camp" src="./images/products/calendar-camp.jpg">
      <img id="dame-products" src="./images/products/dame-products.jpg">
      <img id="dirt-magazine" src="./images/products/dirt-magazine.jpg">
      <img id="spirit-vegetable" src="./images/products/spirit-vegetable.jpg">
    </a-assets>

    <a-box src="#spirit-vegetable"
            position="-2 2 6"
            target="_blank"
            href="http://spirit.dirt.online/"></a-box>

    <a-box src="#dirt-magazine"
            position="0 -2 6"
            target="_blank"
            href="http://www.dirt.online/"></a-box>

    <a-box src="#dame-products"
            position="0 1 5"
            target="_blank"
            href="https://www.dameproducts.com/"></a-box>
    
    <a-box src="#pick-pete"
            position="-3 -2 5"
            target="_blank"
            href="https://pickpete.com/"></a-box>

    <a-box src="#herman-miller"
            position="4 0 1"
            target="_blank"
            href="http://www.hermanmiller.com/why/serious-fun.html"></a-box>

    <a-box src="#working-pair"
            position="-1 -1 0"
            target="_blank"
            href="http://theworkingpair.com/"></a-box>

    <a-box src="#face-design"
            position="5 -2 -2"
            target="_blank"
            href="http://www.facedesign.com/"></a-box>

    <a-box src="#main-frame"
            position="0 -3 -4"
            target="_blank"
            href="http://www.mainframegroup.co/"></a-box>  

    <a-box src="#calendar-camp"
            position="5 -5 -5"
            target="_blank"
            href="http://www.calendarcamp.co/"></a-box>

    <a-camera position="0 0 10">
      <a-ring radius-outer="0.05" radius-inner="0.04"
                 position="0 0 -3"
                 material="color: #27DD95; shader: flat"
                 cursor="maxDistance: 30; fuse: true; timeout: 2000">
                 <a-animation begin="cursor-click" easing="ease-in" attribute="scale"               
                   fill="forward" from="1 1 1" to="2 2 2" dur="150"></a-animation>
                 <a-animation begin="fusing" easing="ease-in" attribute="scale"
                   fill="backwards" from="1 1 1" to="2 2 2" dur="200"></a-animation>
               </a-ring>
    </a-camera>
  </a-scene>

  <p class="ctrl-info">Use the <img width="100px" src="./images/products/wasd.png"/> keys to move around the 3D space</p>

  <!--
  {{#each model.products as |product|}}
    {{product-card product=product}}
  {{/each}}
  -->
</div>
